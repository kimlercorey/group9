<% if simple.title %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img alt="100%x200 product image of <%= simple.title %>" data-src="holder.js/100%x200" style="height: 200px; width: 100%; display: block;" src="<%= simple.image_url.to_s %>" data-holder-rendered="true">
      <div class="caption">

        <h3><%= simple.title %> <small><%= simple.piggybak_sellable.sku rescue " " %><small></h3>
        <p>
          <%=truncate(simple.details, :length=> 150, :omission => '...') { link_to(raw('<em>[more]</em>'),simple) } %>
        </p>

        <p>
          <a href="<%= url_for(simple)%>" class="btn btn-default btn-primary" style="color:#FFFFFF;" type="button"> <span>View details</span> </a>
          <h3 style="text-align: left;"><%= number_to_currency simple.piggybak_sellable.price rescue " "%></h3>
        </p>

      </div>
    </div>
  </div>
  </div>
  </div>
  <% end %>
