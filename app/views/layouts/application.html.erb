<!DOCTYPE html>
<html>
<head>
  <title>Herbonline</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
    .cart_light a { padding:5px; font-weight:bold; }
    .cart_light a:link { color:#ffffff;}
    .cart_light a:visited { color:#ffffff; }
    .cart_light a:hover { color:#ffffff; }
    .cart_light a:active { color:#f0f0f0;}
</style>

</head>
<body>

  <nav class="navbar navbar-inverse" role="navigation">
      
      <span class="cart btn-lg btn-info cart_light" style="float:right;">
      <% if current_user -%>
        <%= link_to 'LOGOUT', main_app.destroy_user_session_path, :method => :delete, :class => "last" %>
      <% else -%>
         <%= link_to 'LOG IN', main_app.new_user_session_path %>
      <% end -%>
      </span>

      <span class="cart btn-lg btn-info cart_light" style="float:right;" > <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> <%= cart_link %><%= orders_link("Order History") %> 
      
      

      </span> 
  </nav>



  <%= notice %>
  <%= alert %>

<div id="content" style="margin-left:25px;margin-right:25px;">
<%= yield %>


<%= render partial: "layouts/footer" %>

</div>

</body>
</html>
