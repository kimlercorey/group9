<div class="page-header">
  <h1><%=t '.title', :default => "Browse by category" %></h1>
</div>

<% @categories.each do |category| %>

	<%= link_to( "<button class='btn btn-primary'> (#{category.items.count} products) #{category.title} </button>".html_safe, #link
		category,
		style: 'color:#FFFFFF; margin:2px;'
	) %>


<% end %>